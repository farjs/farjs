{
  "author": "viktor-podzigun",
  "name": "farjs-app",
  "version": "0.1.0-SNAPSHOT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farjs/farjs.git"
  },
  "private": false,
  "description": "FAR.js - Cross-platform File and Archive Manager app in your terminal",
  "scripts": {
    "sql-bundle": "sql-bundle ./dao/migrations",
    "lint": "quick-lint-js ./**/*.mjs",
    "test": "sql-bundle ./dao/migrations && tsc && bun test && node ./test/all.mjs",
    "format": "prettier **/*.mjs --write",
    "formatCheck": "prettier **/*.mjs --check"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/farjs/farjs/issues"
  },
  "homepage": "https://farjs.github.io",
  "keywords": [
    "farmanager",
    "react",
    "reactjs",
    "react-js",
    "react-blessed",
    "blessed",
    "cli",
    "cli-app",
    "terminal",
    "xterm",
    "file-manager",
    "filemanager",
    "filemanager-ui",
    "filemanagement",
    "file-edit",
    "file-editor",
    "fileeditor",
    "fileviewer",
    "file-viewer",
    "viewer",
    "editor",
    "console",
    "tui",
    "text-ui"
  ],
  "bin": {
    "farjs": "dist/farjs.mjs"
  },
  "files": [
    "app/**/*.mjs",
    "build/farjs-app-opt.js",
    "dao/migrations/bundle.json",
    "dao/**/*.mjs",
    "dist/farjs.mjs",
    "dist/versionChecker.mjs",
    "fs/**/*.mjs"
  ],
  "type": "module",
  "main": "./build/farjs-app-opt.js",
  "exports": "./build/farjs-app-opt.js",
  "preferGlobal": true,
  "browserslist": "maintained node versions",
  "engines": {
    "node": ">=18",
    "bun": ">=0.8"
  },
  "dependencies": {
    "@farjs/better-sqlite3-migrate": "^2.0.0",
    "@farjs/filelist": "0.3.3",
    "@farjs/ui": "0.7.2",
    "iconv-lite": "0.6.3"
  },
  "devDependencies": {
    "@types/node": "^16.6.2",
    "@types/react": "^17.0.1",
    "@types/react-blessed": "^0.7.3",
    "@types/react-test-renderer": "^17.0.1",
    "c8": "^7.13.0",
    "mock-fn": "^1.1.0",
    "prettier": "^2.8.8",
    "quick-lint-js": "^3.0.0",
    "react-assert": "^1.1.0",
    "react-test-renderer": "^17.0.1",
    "typescript": "^4.9.5"
  }
}
